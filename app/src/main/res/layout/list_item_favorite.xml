<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="18dp"
    android:id="@+id/root">

    <include layout="@layout/view_double_line_emoticon" />

    <ImageView
        android:id="@+id/favoriteDragHandlerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/favoriteEditImageView"
        android:src="@drawable/ic_drag_handler" />

    <ImageView
        android:id="@+id/favoriteEditImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/favoriteStarImageView"
        android:src="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/favoriteStarImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_favorite" />
</RelativeLayout>